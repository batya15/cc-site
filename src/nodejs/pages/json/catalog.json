{
  "route": "/catalog/",
  "structure": {
    "view": "html",
    "template": "main",
    "views": {
      "metaTags": {
        "view": "meta",
        "template": "meta"
      },
      "header": {
        "view": "html",
        "template": "header",
        "views": {
          "menu": {
            "view": "list",
            "template": "mainMenu",
            "namespace": "main"
          },
          "nameCompany": {
            "view": "setting",
            "name": "name"
          },
          "phone": {
            "view": "setting",
            "name": "phone"
          },
          "openingTimes": {
            "view": "setting",
            "name": "openingTimes"
          },
          "slogan": {
            "view": "setting",
            "name": "slogan"
          },
          "email": {
            "view": "setting",
            "name": "email"
          }
        }
      },
      "subMenu": {
        "view": "list",
        "template": "subMenu",
        "namespace": "submenu"
      },
      "footerMenu": {
        "view": "list",
        "template": "footerMenu",
        "namespace": "footermenu"
      },
      "socialButton": {
        "view": "list",
        "template": "socialButton",
        "namespace": "socialbutton",
        "views" : {
          "shareButton" : {
            "view": "setting",
            "name": "yandexShare"
          }
        }
      },
      "partners": {
        "view": "list",
        "template": "partners",
        "namespace": "partners"
      },
      "footer": {
        "view": "list",
        "template": "footer",
        "namespace": "footer"
      },
      "scripts": {
        "view": "setting",
        "name": ["googleAnalytics", "yandexMetrika", "scripts"]
      },
      "content": {
        "view": "html",
        "template": "catalog"
      }
    }
  }
}



